{
  "name": "@coding01/docsjs",
  "version": "0.1.3",
  "description": "Render-first Word fidelity component with Web Component core and React/Vue adapters",
  "license": "MIT",
  "type": "module",
  "sideEffects": false,
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./react": {
      "types": "./dist/react.d.ts",
      "import": "./dist/react.js",
      "require": "./dist/react.cjs"
    },
    "./vue": {
      "types": "./dist/vue.d.ts",
      "import": "./dist/vue.js",
      "require": "./dist/vue.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "lint": "eslint .",
    "build": "tsup",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "sizecheck": "node scripts/check-dist-size.mjs",
    "status:report": "node scripts/report_status.mjs",
    "visual:update": "node scripts/visual-regression.mjs --update",
    "visual:test": "node scripts/visual-regression.mjs",
    "benchmark:fidelity": "node scripts/fidelity-benchmark.mjs",
    "verify": "npm run lint && npm run typecheck && npm run test && npm run build && npm run sizecheck",
    "prepublishOnly": "npm run verify"
  },
  "keywords": [
    "word",
    "docx",
    "editor",
    "fidelity",
    "iframe",
    "react",
    "vue",
    "web-component"
  ],
  "homepage": "https://github.com/fanly/docsjs#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fanly/docsjs.git"
  },
  "bugs": {
    "url": "https://github.com/fanly/docsjs/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "vue": ">=3.4.0"
  },
  "dependencies": {
    "jszip": "^3.10.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.18.0",
    "@types/node": "^22.10.5",
    "@types/react": "^19.0.2",
    "@types/react-dom": "^19.0.2",
    "eslint": "^9.18.0",
    "globals": "^15.14.0",
    "pixelmatch": "^6.0.0",
    "playwright": "^1.51.1",
    "pngjs": "^7.0.0",
    "tsup": "^8.3.5",
    "typescript-eslint": "^8.20.0",
    "typescript": "^5.7.3",
    "vitest": "^3.2.4",
    "jsdom": "^26.0.0",
    "vue": "^3.5.13"
  },
  "peerDependenciesMeta": {
    "vue": {
      "optional": true
    }
  }
}
